{
  "extends": "@ijlee2-frontend-configs/typescript/ember",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "declarationDir": "declarations",
    "rootDir": "./src",
    "types": [
      "ember-source/types"
    ]
  },
  "include": [
    "src/**/*",
    "unpublished-development-types/**/*"
  ]<% if (options.packages.addon.hasGlint) { %>,
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }<% } %>
}
