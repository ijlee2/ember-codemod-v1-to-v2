{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationDir": "declarations",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": "./src",
    "types": ["ember-source/types"]
  },
  "include": ["src/**/*", "unpublished-development-types/**/*"]
}
