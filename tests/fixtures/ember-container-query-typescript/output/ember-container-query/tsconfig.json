{
  "extends": "@tsconfig/ember/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "declarations",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "unpublished-development-types/**/*"
  ]
}
