{
  "name": "ember-codemod-v1-to-v2",
  "version": "3.0.0",
  "description": "Codemod to convert Ember addons to v2 addon format",
  "keywords": [
    "codemod",
    "ember-codemod",
    "ember-octane",
    "ember-polaris",
    "ember-v2-addon",
    "emberjs",
    "embroider"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ijlee2/ember-codemod-v1-to-v2.git"
  },
  "license": "MIT",
  "author": "Isaac J. Lee",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": "dist/bin/ember-codemod-v1-to-v2.js",
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "sh build.sh --production",
    "format": "prettier . --cache --write",
    "lint": "concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:fix": "concurrently \"pnpm:lint:*:fix\" --names \"fix:\" && pnpm format",
    "lint:format": "prettier . --cache --check",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "prepare": "pnpm build",
    "release:prepare": "changeset version",
    "release:publish": "pnpm build && changeset publish",
    "test": "sh build.sh --test && mt dist-for-testing --quiet"
  },
  "dependencies": {
    "@codemod-utils/blueprints": "^2.1.0",
    "@codemod-utils/files": "^3.2.1",
    "@codemod-utils/package-json": "^3.3.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@codemod-utils/tests": "^2.2.0",
    "@ijlee2-frontend-configs/changesets": "^1.0.0",
    "@ijlee2-frontend-configs/eslint-config-node": "^2.3.1",
    "@ijlee2-frontend-configs/prettier": "^2.3.1",
    "@sondr3/minitest": "^0.1.2",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^20.19.26",
    "@types/yargs": "^17.0.35",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": "20.* || >= 22"
  }
}
